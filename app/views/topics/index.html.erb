<div class="container">
  <div class="row">
    <div class="col-md-12">
    <br>
    <br>
      <%=link_to "New Resolution",new_topic_path, class:"btn btn-default btn-lg pull-right" %>

      <h1>2016 Resolutions</h1>
      <p>What do you want to accomplish?</p>

      <hr>

      <ul>
      <% @topics.each do |topic| %>
        <li>
          <h3>
          <%= topic.resolution %>
        </h3>
          <span class="badge label-success">UPVOTES: <%= topic.vote %></span>
                  <label class="label label-warning">
            <%=topic.updated_at.to_formatted_s(:short)%>
          </label>


          

          
          <%#= link_to "Vote", :controller => :topics_controller, :method => :post %>
          <br>

          <%= link_to "Vote Up", upvote_topic_path(topic), class:"label label-success", :method => :post %>
          <%= link_to "Vote Down", downvote_topic_path(topic), class:"label label-danger", :method => :post %>
        </li>
      <% end %>
      </ul>

    </div>
  </div>
</div>
